doi = {10.1161/01.CIR.82.1.114},
file = {:C$\backslash$:/Documents/Mendeley Articles/Greenwald, Carter, Berry - Effect of age on the in vitro reflection coefficient of the aortoiliac bifurcation in humans.pdf:pdf},
isbn = {0009-7322},
issn = {0009-7322},
journal = {Circulation},
number = {1},
