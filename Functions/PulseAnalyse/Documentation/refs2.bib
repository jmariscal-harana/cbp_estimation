doi = {10.1097/HJH.0b013e328363c789},
file = {:C$\backslash$:/Documents/Mendeley Articles/Butlin et al. - Carotid-femoral pulse wave velocity assessment using novel cuff-based techniques comparison with tonometric measurement.pdf:pdf},
