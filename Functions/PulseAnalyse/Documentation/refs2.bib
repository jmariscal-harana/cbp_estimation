doi = {10.1016/j.jacc.2015.08.888},
file = {:C$\backslash$:/Documents/Mendeley Articles/Van Sloten et al. - Carotid Stiffness Is Associated with Incident Stroke A Systematic Review and Individual Participant Data Meta-Analys.pdf:pdf},
isbn = {1558-3597 (Electronic)$\backslash$r0735-1097 (Linking)},
