journal = {Cardiovascular diagnosis and therapy},
keywords = {arterial stiffness,atherosclerosis,magnetic resonance imaging,mri,pulse wave velocity,pwv},
number = {2},
pages = {193--206},
pmid = {24834415},
title = {{Review of MRI-based measurements of pulse wave velocity: a biomarker of arterial stiffness.}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=3996237{\&}tool=pmcentrez{\&}rendertype=abstract},
